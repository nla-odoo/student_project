<odoo>
    <template id="my_menu" name="mymenu" inherit_id="portal.portal_breadcrumbs"  priority="1">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li style="margin-left: 15px; font-weight: bold;"><a href="/home/">Property</a></li>
            <li style="margin-left: 15px; font-weight: bold;"><a href="/home/yourinquiry/">My Inquiry</a></li>
            <li style="margin-left: 15px; font-weight: bold;"><a href="/home/tenants/">Details</a></li>
             <li style="margin-left: 15px; font-weight: bold;"><a href="/saleorder">Order History</a></li>
        </xpath>
    </template>

	<template id="rms_form">
        <t t-call="portal.frontend_layout">
            <!-- <div class="o_home_menu_background"> -->
            <div class="container p-5 w-50">
                <form action='/rms/form/' method="post"> 
                    <div class="form-group">
                        <input type="radio" name="user" value="Owner" id="usershow"/>
                        <label>Owner:</label>
                        <!-- <input type="radio" name="user" value="Tenant" id="userhide"/>
                        <label>Tenant:</label> -->
                    </div>
                    <div class="form-group">
                        <input type="radio" name="user" value="Tenant" id="userhide"/>
                        <label>Tenant:</label>
                    </div>
                    <div class="form-group">
                        <label>name</label>
                        <input type="text" class="form-control" name="name" />
                    </div>
                    <div class="form-group">
                        <label>company Name</label>
                        <input type="text" class="form-control" name="companyname"  id="company" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" />
                    </div>
                    <div class="form-group">
                        <label></label>
                            <select name="currency" class="form-control">
                                <t t-foreach="currency" t-as="c">
                                    <option><t t-esc="c.name"/></option>
                                </t>
                            </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        <!-- </div> -->
        </t>
    </template>


    <template id="rms_index">
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
                <div class="search-container" style="margin-top:5px;">
                    <form action="/home/">
                        <input type="text" name="rent" placeholder="Search as per Rent"/>
                        <input type="text" name="palce" placeholder="Search as per City" />
                        <button>submit</button>
                    </form>
                </div>

                <div class="container">
                    <div class="row">
                        <t t-foreach="data" t-as="d">
                        <div class="col-md-10" style="margin-top:5px;">
                            <div class="card " >
                                <div class="card-block" style="width:100%; height:100%;">
                                    <img t-attf-src="data:image/*;base64,{{d.image}}" alt="Card image" class="float-left" style="padding:8px; width:20%; height:30%;" />
                                    <h3  style="margin-top:5px;"><t t-esc="d.city" /> </h3>
                                    <h4  style="margin-top:5px;">₹ <t t-esc="d.rent" class="card-title" /></h4>
                                    <h5><t t-esc="d.bedrooms" class="card-text" /> BHK <t t-esc="d.property_type" class="card-text" /></h5>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                              <b>Available For</b><br/>
                                               <span class="badge badge-secondary"><t t-esc="d.pgfor" class="card-text" /></span>
                                            </div>
                                            <div class="col-sm">
                                              <b>Included Features in rent</b><br/>
                                              <span t-field="d.feature_type_ids" class="card-text badge badge-secondary" />
                                            </div>
                                            <div class="col-sm">
                                              <b>Occupancy</b><br/>
                                              <span class="badge badge-secondary"><t t-esc="d.share" class="card-text" /></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <b><a t-attf-href="/home/details/{{ d.id }}" class="float-right" >More Information...</a> </b>
                                
                                <div class="card-footer">
                                    <b class="badge badge-secondary float-left">Owner:</b>
                                    <a t-attf-href="/home/inquiry/{{ d.id }}"  class="btn btn-info float-right">Inquiry</a>
                                </div>
                            </div>
                        </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="inquiry_form">
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
                <form t-attf-action='/home/inquiry/submit/{{ slug(inq) }}' method="post">

                        <div class="form-group">
                            <label>Tenant Name</label>
                            <input type="text" class="form-control" name="name"/>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="text" class="form-control" name="email" />
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="number" class="form-control" name="phone" />
                        </div>
                        <div class="form-group">
                            <label>CheckIn</label>
                            <input type="date" class="form-control" name="CheckIn"  />
                        </div>
                        <div class="form-group">
                            <label>Intrestin
                            </label>
                            <select class="form-control" name="Intrestin">
                               <option t-attf-value="site_visit">site visit</option>
                               <option t-attf-value="direct_rent">Direct Rent</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    
                </form>
            </div>
        </t>
    </template>

     <template id="yourinquiry" >
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
                <center><h3>Inquiry Details</h3></center>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Check-In</th>
                            <th>status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="idata" t-as="d">
                        <tr>
                            <td><span t-field="d.name" /></td>
                            <td><span t-field="d.email" /></td>
                            <td><span t-field="d.phone" /></td>
                            <td><span t-field="d.check_in"/></td>
                            <td><span t-field="d.status" /></td>
                            <td>
                            <t t-if="d.status == 'conformed'">
                                <a t-attf-href="/home/tenantregi/{{ d.id }}" class="btn btn-primary">Registration</a> 
                            </t>
                            </td>
                            <td><a t-attf-href="/home/checkInquiry/{{ d.company_id.id }}"><span t-field="d.company_id.name"/></a></td>
                        </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="details" >
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
                <t t-foreach="info" t-as="i">
                <div class="row">
                    <div class="col-md-12" style="margin-top:5px;">
                        <div class="card" >

                            <div class="card-header">
                                <div class="row">
                                    <div class="col-sm-2" style="border-right:1px solid gray;">
                                        <h3  style="margin-top:5px;">₹ <t t-esc="i.rent" class="card-title" /></h3>
                                    </div>
                                    <div class="col-sm">
                                        <h4>Paying Guest</h4>
                                        for rent in <b><t t-esc="i.city"/></b>
                                    </div>
                                </div>
                            </div>


                            <div class="card-block" >
                                <div>
                                   <a href="#"> <img t-attf-src="data:image/*;base64,{{i.image}}" alt="Card image" class="float-left" style="padding:8px; width:20%;" /></a>
                                </div> 
                                <div class="row" style="margin-top:8px;border-bottom:1px dotted gray;padding-bottom:5px;">
                                    <div class="col-sm-3">
                                        <b>Available For</b><br/>
                                        <span class="badge badge-secondary"><t t-esc="i.pgfor" class="card-text" /></span>
                                    </div>
                                    <div class="col-sm">
                                        <b>Property Floor</b><br/>
                                        <span class="badge badge-secondary"><t t-esc="i.property_floor"/></span>
                                    </div>
                                    <div class="col-sm">
                                        <b>Occupancy</b><br/>
                                        <span class="badge badge-secondary"><t t-esc="i.share" class="card-text" /></span>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:10px;border-bottom:1px dotted gray;">
                                    <div class="col-sm">
                                        <b>Address</b><br/>
                                        <span>
                                        <t t-esc="i.address"/>  <t t-esc="i.city" /> <t t-esc="i.state" /> </span>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:10px;  padding:5px; border-bottom:1px dotted gray;">
                                    <div class="col-sm-3">
                                        <b>Rooms in PG</b><br/>
                                        <span class="badge badge-secondary"><t t-esc="i.bedrooms" class="card-text" /></span>
                                    </div>
                                    <div class="col-sm">
                                        <b>Total Floor</b><br/>
                                        <span class="badge badge-secondary">
                                        <t t-foreach="i.feature_type_ids" t-as="ic">
                                            <t t-if="ic.name == 'Food'">
                                                <t t-foreach="i.weekday_ids" t-as="f">
                                                    <t t-esc="f.name"/>, 
                                                </t>
                                            </t>
                                        </t></span>
                                    </div>
                                    <div class="col-sm">
                                        <b>Last Entry Time</b><br/>
                                        <span class="badge badge-secondary"><t t-esc="i.late_entry"/></span>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="card-body">
                                <ul class="list-group">
                                    <li class="list-group-item active"><h4>Description</h4></li>
                                    <li class="list-group-item col-sm-6">
                                        Rent<h6 class="float-right"><t t-esc="i.rent"/></h6>
                                    </li>
                                    <li class="list-group-item col-sm-6">
                                        Deposite<h6 class="float-right"><t t-esc="i.deposite"/></h6>
                                    </li>
                                    <li class="list-group-item col-sm-6">
                                        Maintaince Charge<h6 class="float-right"><t t-esc="i.maintance"/></h6>
                                    </li>
                                    <li class="list-group-item col-sm-6">
                                        Maintaince Type<h6 class="float-right"><t t-esc="i.maintance_type"/></h6>
                                    </li>
                                     <li class="list-group-item col-sm-6">
                                        Total<h6 class="float-right">
                                        <t t-esc="i.rent + i.maintance"/></h6>
                                    </li>
                                </ul> 
                            </div>

                            <div class="card-footer">
                                <a t-attf-href="/home/inquiry/{{ slug(i) }}"  class="btn btn-info float-right">Contact Owner</a>
                            </div>
                        </div>
                    </div>
                </div>
                </t>
            </div>
        </t>
    </template>
</odoo>