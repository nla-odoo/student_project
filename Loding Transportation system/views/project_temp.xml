    <template id='lts_createinquirey'>
        <t t-call="portal.portal_layout">
            <div class='container col-md-6'>
                <form t-attf-action='/createinquirey/' method='post'>
                    <center><h1>Inquirey</h1></center>
                    
                    <div class='form-group'>
                        <label>Parter_ID</label>
                        <input type='text' name='partner_id' t-attf-value="#{partner.id}" class='form-control'/>
                    </div>
                
                    <div class='form-group'>
                        <label>Name Of Product</label>
                        <input type='text' name='name'   class='form-control'/>
                    </div>

                    <div class='form-group'>
                        <label>Description</label>
                        <input type='text' name='description'   class='form-control'/>
                    </div>
                    
                    <button name='save' type='submit' class='btn btn-success'>save</button>
                    <a href="/yourinquirey/" class="btn btn-primary">Cancel</a>
                </form>
            </div>
        </t>
    </template>

    <template id="lts_displayinquires">
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
                <center><h1 style="color:#00A09D;">Inquiries</h1></center>
                <div class="row">
                <table class="table table-stripded">
                    
                    <tr>
                        <th>Description</th>
                        <th>Name Of Product</th>
                        <th>Add</th>
                    </tr>
                    <t t-foreach="inquiries" t-as="a">
                    <tr>
                        <td><t t-esc="a.description"/></td>
                        <td><t t-esc="a.name"/></td>
                        <td><a href="" class="btn btn-danger btn-md"><span class="fa fa-plus"></span> Add to Cart</a></td>
                    </tr>
                    </t>
                </table>
                </div>
            </div>
        </t>
    </template>


    

