<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="view_vehicles_tree">
		<field name="name">Vehicles</field>
		<field name="model">vehicles.vehicles</field>
		<field name="arch" type="xml">
			<tree>
			    <field name="company_id"/>
			    <field name="vehicle_type"/>
			    <field name="vehicle_capacity"/>
			    <field name="vehicle_speed"/>
			    <field name="vehicle_weight"/>
			    <field name="vehicle_length"/>
			    <field name="vehicle_Engine"/>        
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_vehicles_form">
		<field name="name">Vehicles</field>
		<field name="model">vehicles.vehicles</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="company_id"/>
						<field name="vehicle_type"/>
						<field name="vehicle_capacity"/>
						<field name="vehicle_speed"/>
						<field name="vehicle_weight"/>
						<field name="vehicle_length"/>
						<field name="vehicle_Engine"/> 
						<field name="vehicle_image" widget="image"/>    
					</group>
				</sheet>    
			</form>
		</field>
	</record>
					
	<record id="view_vehicle_graph" model="ir.ui.view">
        <field name="name">vehicle.graph</field>
        <field name="model">vehicles.vehicles</field>
        <field name="arch" type="xml">
            <graph string="Vehicle Graph" >
                <field name="vehicle_capacity" type="measure"/>
                <field name="vehicle_type"/>
            </graph>
        </field>
    </record>

	<record model="ir.ui.view" id="view_vehicle_pivot">
		<field name="name">vehicles</field>
		<field name="model">vehicles.vehicles</field>
		<field name="arch" type="xml">
			<pivot string="Vehicle">
				<field name="vehicle_weight" type="row"/>
				<field name="vehicle_type" type="col"/>
			</pivot>
		</field>
	</record>

	<record id='dashboard_view' model='ir.ui.view'>
		<field name='name'>dashboard.view</field>
		<field name='model'>vehicles.vehicles</field>
		<field name="mode">primary</field>
		<field name='arch' type='xml'>
			<dashboard>
				<view type="graph" ref="lts.view_vehicle_graph"/>
				<view type="pivot" ref="lts.view_vehicle_pivot"/>
			</dashboard>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_vehicle_dashboard">
		<field name="name">Vehicles</field>
		<field name="res_model">vehicles.vehicles</field>
		<field name="view_mode">dashboard</field>
	</record>

	<record model="ir.actions.act_window" id="action_vehicles">
		<field name="name">vehicles</field>
		<field name="res_model">vehicles.vehicles</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem name="vehicles" id="vehicle_id" parent="lts_configration" action="action_vehicles" />

	<menuitem name="Reporting"  id="lts_reporting" parent="lts_menu_root" action="action_vehicle_dashboard" groups="lts.group_transporter"/>


</odoo>