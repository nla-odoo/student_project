<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fleet.tracking</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='statistics']" position="after">
                <h2 modifiers="{}">
                    Payment Credentials
                </h2>
                <div class="row mt16 o_settings_container" id="map_view" modifiers="{}">
                    <div class="col-12 col-lg-6 o_setting_box" id="token_map_view" modifiers="{}">
                        <div class="o_setting_right_pane" modifiers="{}">
                            <div class="content-group" modifiers="{}">
                                <label for="sandbox_merchant_id" string="Sandbox Merchant Id: " modifiers="{}"/>
                                <field name="sandbox_merchant_id" modifiers="{}"/>
                            </div>
                            <div class="content-group" modifiers="{}">
                                <label for="sandbox_merchant_key" string="Sandbox Merchant Key: " modifiers="{}"/>
                                <field name="sandbox_merchant_key" modifiers="{}"/>
                            </div>
                            <div class="content-group" modifiers="{}">
                                <label for="website_url" string="Website Url: " modifiers="{}"/>
                                <field name="website_url" modifiers="{}"/>
                            </div>
                            <div class="content-group" modifiers="{}">
                                <label for="industry_type" string="Industry Type: " modifiers="{}"/>
                                <field name="industry_type" modifiers="{}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>