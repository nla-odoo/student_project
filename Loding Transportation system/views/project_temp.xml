<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="mytemp" name="my Menu" inherit_id="portal.portal_breadcrumbs"  priority="1">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li><a href='/product/' class="btn btn-link">Products</a></li>
            <li><a href='/yourinquirey/' class="btn btn-link">Inquires</a></li>
            <li><a href="/customer_detail/" class="btn btn-link">Account</a></li>
        </xpath>
    </template>

    <template id="lts_index">
        <t t-call="portal.portal_layout">
            <div class='container'> 
                <br/><br/>
                <center><h1 style="color:#00A09D"><u>Welcome To The Transporter Loading Services</u></h1></center>

                <center><img src="/lts/static/description/images/fulltruck2.jpeg" style="width: 600px; height: 400px;"/></center>

            </div>
        </t>
    </template>

    <template id="lts_customerdetails">
        <t t-call="portal.portal_layout">
        <div class="card mr16" style="width: 18rem;">
                            <div class="card-body">
                                <t t-foreach="details" t-as="d">
                                <p class="card-text">
                                    <strong>Name: </strong>
                                    <t t-esc="d.name"/>
                                </p>
                                <p class="card-text">
                                    <strong>Date Of Register: </strong>
                                    <t t-esc="d.date"/>
                                </p>
                                <p class="card-text">
                                    <strong>City: </strong>
                                    <t t-esc="d.city"/>
                                </p>
                                <p class="card-text">
                                    <strong>Email: </strong>
                                    <t t-esc="d.email"/>
                                </p>
                                <p class="card-text">
                                    <strong>Phone: </strong>
                                    <t t-esc="d.phone"/>
                                </p>
                        </t>
                    </div>
            
            </div>
        </t>
    </template>

  <template id='customerregister'>
        <t t-call="portal.portal_layout">
            <form  action="/customerregister/form" method="post"> 
                <div class='container'>
                    <div class='form-group'>
                        <label>Name</label>
                        <input type='text' name='name' class='form-control'/>
                    </div>
                    <div class='form-group'>
                        <label>Password</label>
                        <input type='password' name='password' class='form-control'/>
                    </div>
                    <div class='form-group'>
                        <label>Email</label>
                        <input type='text' name='email' class='form-control'/>
                    </div>
                    <div class='form-group'>
                        <label>City</label>
                        <input type='text' name='city' class='form-control'/>
                    </div>
                    <div class='form-group'>
                        <label>Phone Number</label>
                        <input type='text' name='cnumber' class='form-control'/>
                    </div>
                    <div class='form-group'>
                        <label>Date</label>
                        <input type='date' name='date' class='form-control'/>
                    </div>
                    <div class="form-group">
                        <label>Currency</label>
                        <select name="currency" class="form-control">
                            <t t-foreach="currency" t-as="c">
                            <option><t t-esc="c.name"/></option>
                            </t>
                        </select>  
                    </div>
                    <center><button name='save' type='submit' class='btn btn-success'>save </button></center>
                </div>
            </form>
        </t>
    </template>
    
