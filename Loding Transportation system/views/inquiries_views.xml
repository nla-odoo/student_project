<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record model="ir.ui.view" id="view_inquirey_tree">
		<field name="name">inquirey</field>
		<field name="model">inquirey.inquirey.demo</field>
		<field name="arch" type="xml">
			<tree create="false" edit="false">
			   <field name="company_id"/>
			   <field name="source_add"/>
			   <field name="desti_add"/>
			   <field name="distance"/>
			   <field name="duration"/>
			   <field name= "weight"/>
			   <field name="driver_id"/>
			   <field name="vehicle_type"/>
			   <field name="vehicle_capacity"/>
			   <field name="vehicle_speed"/>
			   <field name="vehicle_weight"/>
			   <field name="date"/>
			   <field name="order_status"/> 
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_inquirey_form">
		<field name="name">inquirey</field>
		<field name="model">inquirey.inquirey.demo</field>
		<field name="arch" type="xml">
			<form create="false" edit="false">
			    <sheet>
			        <div class="oe_button_box" style="padding: 2mm;">
			        	<button type="object" name="order" icon="fa-check" class="oe_stat_button">Order Confirm</button>
			        	<button type="object" name="ordercancel" class="oe_stat_button" icon="fa-window-close">Order Cancel</button>
			        </div>
			        <group>
			    		 <field name="company_id"/>
						 <field name="source_add"/>
						 <field name="desti_add"/>
						 <field name="distance"/>
						 <field name="duration"/>
						 <field name= "weight"/>
						 <field name="date"/>
						 <field name="order_status"/>
					</group>
					<group>
						<notebook>
						    <page string="Selected Vehicle">
						    	<group>
						    	  <field name="vehicle_type"/>
								  <field name="vehicle_capacity"/>
								  <field name="vehicle_speed"/>
								  <field name="vehicle_weight"/>
								</group>
						    </page>
						<page string="Selected Driver">
						    	<group>
						    	  <field name="driver_id"/>
								</group>
						    </page>
						</notebook>
					</group>
				</sheet>      
			</form>
		</field>
	</record>

	<record model="ir.ui.view" id="view_inquirey_cal">
		<field name="name">inquirey2</field>
		<field name="model">inquirey.inquirey.demo</field>
		<field name="arch" type="xml">
			<calendar string="Service Request" date_start="date">
				<field name="vehicle_type"/>
			</calendar>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_inquirey">
		<field name="name">Inquirey</field>
		<field name="res_model">inquirey.inquirey.demo</field>
		<field name="view_mode">tree,form,calendar,graph,pivot</field>
	</record>

	<menuitem name="Inquirey" id="inquirey_id" parent = "lts_menu_root" action="action_inquirey"/>
		 
</odoo>