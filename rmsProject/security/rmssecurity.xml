<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.module.category" id="module_security">
	        <field name="name">Rent Management</field>
	        <field name="description">User access level for this module</field>
	        <field name="sequence">3</field>
	    </record>

	    <record id="group_owner" model="res.groups">
	        <field name="name">Group Owner</field>
	        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
	        <field name="category_id" ref="rms.module_security"/>
	    </record>
	  

	    <record model="ir.rule" id="property_record_restricted_company_rule">
	        <field name="name">Restricted Record: multi-company</field>
	        <field name="model_id" ref="model_training_propertyregi"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
	        <field name="groups" eval="[(4, ref('rms.group_owner'))]"/>
    	</record>

	    <record model="ir.rule" id="inquiry_record_restricted_company_rule">
	        <field name="name">Restricted Record: multi-company</field>
	        <field name="model_id" ref="model_training_inquiry"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">
	            [('company_id', 'in', company_ids)]
	        </field>
	        <field name="groups" eval="[(4, ref('rms.group_owner'))]"/>
    	</record>

    	<record model="ir.rule" id="room_record_restricted_company_rule">
	        <field name="name">Restricted Record: multi-company</field>
	        <field name="model_id" ref="model_training_rooms"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
	        <field name="groups" eval="[(4, ref('rms.group_owner'))]"/>
    	</record>

    	<record model="ir.rule" id="bill_record_restricted_company_rule">
	        <field name="name">Restricted Record: multi-company</field>
	        <field name="model_id" ref="model_training_bill"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
	        <field name="groups" eval="[(4, ref('rms.group_owner'))]"/>
    	</record>

		<record model="ir.rule" id="allot_record_restricted_company_rule">
	        <field name="name">Restricted Record: multi-company</field>
	        <field name="model_id" ref="model_training_allot"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
	        <field name="groups" eval="[(4, ref('rms.group_owner'))]"/>
    	</record>	

    	<record model="ir.rule" id="tenant_record_restricted_company_rule">
	        <field name="name">Restricted Record: multi-company</field>
	        <field name="model_id" ref="model_training_tenants"/>
	        <field name="global" eval="True"/>
	        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
	        <field name="groups" eval="[(4, ref('rms.group_owner'))]"/>
    	</record>	
	</data>
	
</odoo>