<odoo>
    
    <record id="product_attribute_furnish" model="product.attribute">
        <field name="name">Furnished</field>
    </record>
    <record id="product_attribute_semifurnish" model="product.attribute">
    	<field name="name">Semi-Furnished</field>
    </record>
    <record id="product_attribute_unfurnish" model="product.attribute">
    	<field name="name">Un-Furnished</field>
    </record>

    <record id="product_attribute_value_1" model="product.attribute.value">
        <field name="name">Beds</field>
        <field name="attribute_id" ref="product_attribute_furnish"/>
    </record>
    <record id="product_attribute_value_2" model="product.attribute.value">
        <field name="name">AC</field>
        <field name="attribute_id" ref="product_attribute_furnish"/>
    </record>
    <record id="product_attribute_value_3" model="product.attribute.value">
    	<field name="name">Curtain</field>
    	<field name="attribute_id" ref="product_attribute_semifurnish" />
    </record>

    <record id="product_room_1" model="product.template">
        <field name="name">Room1</field>
        <field name="sale_ok" eval="True"/>
        <field name="rent_ok" eval="True"/>
        <field name="type">service</field>
        <field name="list_price">6000</field>
        <field name="standard_price">5000</field>
        <field name="image_1920" type="base64" file="rms/static/description/8.jpeg"/>
        <field name="invoice_policy">delivery</field>
        <field name="extra_daily">50</field>
    </record>
    <record id="product_template_value_1" model="product.template.attribute.line">
     	<field name="product_tmpl_id" ref="product_room_1"/>
 		<field name="attribute_id" ref="product_attribute_furnish"/>
 		<field name="value_ids" eval="[(6, 0, [ref('product_attribute_value_1'),ref('product_attribute_value_2')])]"/>
    </record>

    <record id="rent_price_1" model="rental.pricing">
    	<field name="duration">1</field>
    	<field name="unit">month</field>
    	<field name="price">5000</field>
    	<field name="product_template_id" ref="product_room_1" />
    </record>

    <record id="product_room_2" model="product.template">
        <field name="name">Room2</field>
        <field name="sale_ok" eval="True"/>
        <field name="type">service</field>
        <field name="list_price">5500</field>
        <field name="standard_price">5000</field>
        <field name="image_1920" type="base64" file="rms/static/description/5.jpg"/>
        <field name="invoice_policy">delivery</field>
    </record>


    <record id="product_room_3" model="product.template">
        <field name="name">Room3</field>
        <field name="sale_ok" eval="True"/>
        <field name="type">service</field>
        <field name="list_price">5500</field>
        <field name="standard_price">5000</field>
        <field name="image_1920" type="base64" file="rms/static/description/5.jpg"/>
        <field name="invoice_policy">delivery</field>
    </record>
</odoo>