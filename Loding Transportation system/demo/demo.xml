<odoo>

<record id="product_truck1" model="product.template">
        <field name="name">Truck_Roller Road</field>
        <field name="default_code">Product_1</field>
        <field name="type">service</field>
        <field name="sale_ok" eval="True"/>
        <field name="purchase_ok" eval="True"/>
        <field name="list_price">6000.0</field>
        <field name="standard_price">5000.00</field>
        <field name="service_type">timesheet</field>
        <field name="service_tracking">task_in_project</field>
        <field name="image_1920" type="base64" file="lts/static/description/images/logo10.png"/>
</record>


        <record id="truck_attribute_1" model="product.attribute">
            <field name="name">Truck_Capacity</field>
        </record>

        <record id="truck_attribute_2" model="product.attribute">
                <field name="name">Truck_speed</field>
        </record>

        <record id="truck_attribute_3" model="product.attribute">
                <field name="name">Truck_Length</field>
        </record>

        <record id="truck_attribute_4" model="product.attribute">
                <field name="name">Truck_Weight</field>
        </record>



        <record id="truck_attribute_value_1" model="product.attribute.value">
            <field name="name">800(kg)</field>
            <field name="attribute_id" ref="truck_attribute_1"/>
        </record>

        <record id="truck_attribute_2_value_1" model="product.attribute.value">
                <field name="name">70(kmph)</field>
                <field name="attribute_id" ref="truck_attribute_2"/>
        </record>

        <record id="truck_attribute_3_value_1" model="product.attribute.value">
                <field name="name">300(mtr)</field>
                <field name="attribute_id" ref="truck_attribute_3"/>
        </record>

        <record id="truck_attribute_4_value_1" model="product.attribute.value">
                <field name="name">900(kg)</field>
                <field name="attribute_id" ref="truck_attribute_4"/>
        </record>


        <record id="truck_1_attribute_1_attribute_line" model="product.template.attribute.line">
            <field name="product_tmpl_id" ref="product_truck1"/>
            <field name="attribute_id" ref="truck_attribute_1"/>
            <field name="value_ids" eval="[(6, 0, [ref('lts.truck_attribute_value_1')])]"/>
        </record>

        <record id="truck_1_attribute_2_attribute_line" model="product.template.attribute.line">
                <field name="product_tmpl_id" ref="product_truck1"/>
                <field name="attribute_id" ref="truck_attribute_2"/>
                <field name="value_ids" eval="[(6, 0, [ref('lts.truck_attribute_2_value_1')])]"/>
        </record>

        <record id="truck_1_attribute_3_attribute_line" model="product.template.attribute.line">
                <field name="product_tmpl_id" ref="product_truck1"/>
                <field name="attribute_id" ref="truck_attribute_3"/>
                <field name="value_ids" eval="[(6, 0, [ref('lts.truck_attribute_3_value_1')])]"/>
        </record>


        <record id="truck_1_attribute_4_attribute_line" model="product.template.attribute.line">
                <field name="product_tmpl_id" ref="product_truck1"/>
                <field name="attribute_id" ref="truck_attribute_4"/>
                <field name="value_ids" eval="[(6, 0, [ref('lts.truck_attribute_4_value_1')])]"/>
        </record>

</odoo>