<odoo>
    <template id="sale_order_lines" >
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
                <center><h3>Order History Details</h3></center>
                <!-- <button type="button" class="btn btn-primary">Primary <span class="badge">7</span></button>  -->
                <div class="col-md-3">
                	<select class="form-control" id="Intrestin" onchange="myFunction()">
                		<option value="2019">2019</option>
                		<option value="2020">2020</option>
                	</select>
                </div>
                <table class="table  table-bordered" id="datatable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>date</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                    	<t t-set="summ" t-value="0.0"/>
               			<t t-foreach="orders" t-as="d">
               				<tr>
               					<td><a t-attf-href="/saleorder/detail/{{d.id}}"><span t-field="d.name"/></a></td>
               					<td><span t-field="d.date_order"/></td>
               					<td><span t-field="d.amount_total"/></td>
               					<t t-set="summ" t-value="summ + d.amount_total" />
               				</tr>
			            </t>
			            <tr>
			            	<td class="text-right" colspan="2"><h5>SubTotal : </h5></td>
			            	<td><h5><span t-esc="summ"/></h5></td>
			            </tr>
                    </tbody>
                </table>
            </div>
            <div class='col-md-5'>
                <canvas id="myChart" style="width: 80%; height: 80%"></canvas>    
            </div>
            
	
        </t>
        <script type="text/javascript" src="/rms/static/src/js/demo.js" />
        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    </template>

    <template id="sale_order_details">
        <t t-call="portal.portal_layout">
            <div class="container-fluid">
            	<center><h3>Order History Details</h3></center>
	                <div class="card">
						<div class="card-header">
						<h4>
							<!-- <span t-field="details.name"/><br/> -->
							<span t-field="order.name"/>
						</h4>
						</div>
						<div class="card-body">
						    <h5>Order Date : <span t-field="order.date_order"/></h5>
						    <h5>Shipping Address : </h5>
						    <h6> <span t-field="partner.street" /></h6>
						    <h6><span t-field="partner.city"/> - <span t-field="partner.zip"/></h6>
						    <br/><br/>
						    <h4>Price :</h4>
						   	<table class="table table-condensed">
						   		<th>Name</th>
						   		<th>Quantity</th>
						   		<th>Unit Price</th>
						   		<th>Taxes</th>
						   		<th>Amount</th>

						   		<t t-foreach="details" t-as="d">
						   		<tr class="value">
						   			<td><span t-field="d.name" /></td>
						   			<td><span t-field="d.product_uom_qty" /></td>
						   			<td><span t-field="d.price_unit" /></td>
						   			<td class="sum"><span t-field="d.price_tax" /></td>
						   			<td class="sum"><span t-field="d.price_total" /></td>
						   		</tr>
						   		</t>
						   	</table>
						</div>
					</div>
            </div>
        </t>
    </template>

</odoo>