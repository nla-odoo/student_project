<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="vehicle_vehicle_list_view" model="ir.ui.view">
        <field name="name">fleet.vehicle.vehicle.tree</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <tree>
                <field invisible="1" name="company_id"/>
                <field name="model_id"/>
                <field name="license_plate"/>
                <field name="no_of_seats"/>
                <field name="no_of_doors"/>
                <field name="color"/>
                <field name="model_year"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    
    <record id="vehicle_vehicle_form_view" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="model_id"/>
                        <field name="license_plate"/>
                        <field name="no_of_seats"/>
                        <field name="no_of_doors"/>
                        <field name="color"/>
                        <field name="model_year"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fleet_vehicle_view_kanban" model="ir.ui.view">
        <field name="name">fleet.vehicle.kanban</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="model_id"/>
                <field name="license_plate"/>
                <field name="no_of_seats"/>
                <field name="no_of_doors"/>
                <field name="color"/>
                <field name="model_year"/>
                <field name="description"/>
                <field name="image_128"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img alt="Vehicle" t-att-src="kanban_image('fleet.vehicle', 'image_128', record.model_id.raw_value)"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="license_plate"/>: 
                                    <field name="model_id"/></strong>
                                <div class="o_kanban_tags_section">No of Seat's : 
                                    <b><field name="no_of_seats"/></b>
                                </div>
                                <ul>
                                    <li>No of Door's :
                                        <b>field name="no_of_doors"/></b>
                                    </li>
                                    <li>Color :
                                        <b><field name="color"/></b>
                                    </li>
                                    <li>Year :
                                        <b><field name="model_year"/></b>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="vehicle_vehicle_action_window" model="ir.actions.act_window">
        <field name="name">vehicle </field>
        <field name="res_model">fleet.vehicle</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    
    <menuitem id="vehicle_vehicle_menu_child" name="Vehicles" parent="fleet_tracking.vehicle_brand_menu_root" sequence="2"/>
    <menuitem action="vehicle_vehicle_action_window" id="vehicle_vehicle_menu_child_vehicles" name="Vehicles" parent="fleet_tracking.vehicle_vehicle_menu_child"/>
</odoo>