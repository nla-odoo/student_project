<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="bill_form_view">
        <field name="name">training.form</field>
        <field name="model">training.bill</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                <field name="bill_type"/>
                <field name="bill_date"/>
                <field name="payment"/>
            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="bill_tree_view">
        <field name="name">training.tree</field>
        <field name="model">training.bill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bill_type"/>
                <field name="bill_date"/>
                <field name="payment"/>
            </tree>
        </field>
    </record>

    <record id="bill_pivot_view" model="ir.ui.view">
       <field name="name">bill.pivot</field>
       <field name="model">training.bill</field>
       <field name="arch" type="xml">
           <pivot string="Total bill">
               <field name="bill_type" type="row"/>
               <field name="bill_date" type="col"/>
               <field name="payment" type="col"/>
           </pivot>
       </field>
    </record>

    <record id="bill_graph_view" model="ir.ui.view">
        <field name="name">bill graph</field>
        <field name="model">training.bill</field>
        <field name="arch" type="xml">
            <graph>
                <field name="bill_type"/>
                <field name="payment" type="measure"/>
            </graph>
        </field>
    </record>


    <record id="bill_dashboard_view" model="ir.ui.view">
            <field name="name">bill.view.dashboard</field>
            <field name="model">training.bill</field>
            <field name="arch" type="xml">
                <dashboard>
                    <view type="pivot" ref="rms.bill_pivot"/>
                    <group string="Sale">
                        <aggregate name="payment" field="payment" domain="[('bill_type', '=', ['Electricity','internet' ])]" string="Total Bill of Electricity and Internet"/>
                    </group>
                    <view type="graph" ref="rms.bill_graph"/>
                </dashboard>
            </field>
    </record>
  	

    <record model="ir.ui.view" id="inquiry_tree_view">
        <field name="name">training inquiry</field>
        <field name="model">training.inquiry</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="check_in"/>
                <field name="intrest_in"/>
                <field name="status"/>
                <button string="status" type="object" name="inquirystatus" attrs="{'invisible' : [('status', '=', 'conformed')]}" />      
            </tree>
        </field>
    </record>
    
    <record id="inquiry_action" model="ir.actions.act_window">
        <field name="name">training  tenant inquiry </field>
        <field name="res_model">training.inquiry</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="bill_action" model="ir.actions.act_window">
        <field name="name">Total Bill</field>
        <field name="res_model">training.bill</field>
        <field name="view_mode">dashboard,tree,form,pivot,graph</field>
    </record>
</odoo>