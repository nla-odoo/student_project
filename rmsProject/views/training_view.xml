<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="food_tree_view">
        <field name="name">training food form</field>
        <field name="model">training.food</field>
        <field name="arch" type="xml">
            <tree string="food_tree_view" editable="bottom">
               <!--  <field name="active" /> -->
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="roomallot_form_view">
        <field name="name">training.roomallot form</field>
        <field name="model">training.allot</field>
        <field name="arch" type="xml">
            <tree string="Allot_tree_view" create="false">
                <field name="company_id"/>
                <field name="room_number_id"/>
                <field name="tenant_name"/>
                <field name="rent"/>
                <field name="capacity"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="propertyroom_tree_view">
        <field name="name">training.room tree</field>
        <field name="model">training.rooms</field>
        <field name="arch" type="xml">
            <tree string="tree view">
                <field name="company_id"/>
                <field name="room_number"/>
                <field name="room_capacity"/>
                <field name="room_facility"/>
                <field name="per_bed_rent"/>
                <!-- <field name="image" widget="many2many_binary"/> -->
                <field name="status"/>
                <button string="Book Room" type="object" name="addtenant"
                attrs="{'invisible': [('status','!=','vacant'),('status','!=','remaining')]}"/>
                <button string="Vacant" type="object" name="vacant" attrs="{'invisible': [('status', '!=', 'booked')]}"/>
            </tree>
        </field>
    </record>

    <record id="property_kanban_view" model="ir.ui.view">
        <field name="name">training property kanban</field>
        <field name="model">training.propertyregi</field>
        <field name="arch" type="xml">
            <kanban widget="progress">
                <field name="id"/>   
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="o_kanban_image">
                                            <img t-att-src="kanban_image('training.propertyregi','image', record.id.value)" class="oe_product_photo" alt="Avatar" options="{'size': [150,150]}"/>
                                        </div>
                                    </div>
                                    <div class="col-md-9">
                                        <b>
                                        <field name="name"/><br/>
                                        <field name="city"/><br/>
                                        <field name="bedrooms"/>BHK<br/>
                                        </b>
                                        <!-- <button name="goto" type="object" string="Inquiry" >
                                            Inquiry</button> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.ui.view" id="properties_tree_view">
        <field name="name">training property</field>
        <field name="model">training.propertyregi</field>
        <field name="arch" type="xml">
            <tree>
                    <field name="company_id"/>
                    <field name="name"/>
                    <field name="property_type"/>
                    <field name="city"/>
                    <field name="state"/>
                   <!--  <field name="foodtype" /> -->
                    <field name="bedrooms"/>
                    <field name="furnish_type"/>
                    <field name="avialble_from"/>  
                    <field name="rules"/>
                    <field name="late_entry"/> 
                    <field name="image" widget='image'/>                  
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="properties_form_view">
        <field name="name">training  property</field>
        <field name="model">training.propertyregi</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button icon="fa-envelope" type="action" name="%(inquiry_action)d">
                            <div class="o_stat_info">
                                <field name="inquiry_count" widget="statinfo" nolabel="1"/><br/>
                                <span>Total Inquiry</span>
                            </div>
                        </button>
                        <button icon="fa-bed" type="action"  name="">
                            <div class="o_stat_info">
                                <field name="room_count" widget="statinfo" nolabel="1"/><br/>
                                <span>Total Rooms</span>
                            </div>
                        </button>
                         <button icon="fa-users" type="action"  name="">
                            <div class="o_stat_info">
                                <field name="tenant_count" widget="statinfo" nolabel="1"/><br/>
                                <span>Tenants</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_button_box" style="padding:1mm">
                        <button  type="object" name="room" string="Add Room"  class="btn-info"/>
                    </div>

                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="name"/>
                            <field name="property_type"/>
                            <field name="pgfor" attrs="{'invisible': [('property_type', '=', False)]}" style="width:50%%" widget="radio"/>
                            <field name="share" attrs="{'invisible': [('property_type', '=', False)]}" style="width:50%%" widget="radio"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="city"/>
                            <field name="address"/>                           
                        </group>  
                    </group>                   
                    <!-- Property Details -->
                    <notebook>
                        <page name="page1"  string="Payment Information">
                            <group>
                                <field name="rent"/>
                                <field name="maintance"/>
                                <field name="maintance_type"/>
                                <field name="deposite"/>
                                <field name="feature_type_ids" widget="many2many_tags"/>
                                <field name="hide" invisible="1"/>
                                <field name="weekday_ids" attrs="{'invisible': [('hide', '!=', True)]}" style="width:50%" widget="many2many_checkboxes"/>
                                <field name="food_type" widget="radio"/>
                            </group>
                        </page>
                        <page name="page2" string="Property Information">
                            <group>
                                <field name="bedrooms"/> 
                                <field name="furnish_type"/>
                            </group>
                            <group>
                                <field name="property_floor"/>
                                <field name="total_floor"/>
                                <field name="avialble_from"/>  
                                <field name="rules"/>
                                <field name="late_entry" />  
                                <!-- <field name="image" widget="many2many_binary"/>  -->
                                <field name="image" widget="image"/>
                            </group> 
                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>
   
    <record model="ir.ui.view" id="tenants_tree_view">
        <field name="name">training.tree</field>
        <field name="model">training.tenants</field>
        <field name="arch" type="xml">
            <tree string="tree view" decoration-info="occupation=='Study'" create="false">
                <field name="name" />
                <field name="dob" />
                <field name="phone" />
                <field name="gender" />
                <field name="email" widget="email" />
                <field name="occupation" />
                <field name="home_address" />
                <field name="father_name" />
                <field name="father_phone" />
                <button string="Allot Room" type="object" name="allotroom" />
            </tree>
        </field>
    </record>
  
   <record id="property_action" model="ir.actions.act_window">
        <field name="name">training  tenant Property </field>
        <field name="res_model">training.propertyregi</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    <record id="tenant_action" model="ir.actions.act_window">
        <field name="name">training tenantRegi</field>
        <field name="res_model">training.tenants</field>
        <field name="view_mode">tree,form</field>
    </record>
 
    <!-- config Table -->

    <record id="features_action" model="ir.actions.act_window">
        <field name="name">training  tenant features </field>
        <field name="res_model">training.features</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="food_action" model="ir.actions.act_window">
        <field name="name">training  tenant food </field>
        <field name="res_model">training.food</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="room_action" model="ir.actions.act_window">
        <field name="name">training  tenant room </field>
        <field name="res_model">training.rooms</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="allot_action" model="ir.actions.act_window">
        <field name="name">room allotment</field>
        <field name="res_model">training.allot</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="tenants_owner_root" name="RMS" web_icon="rms,static/description/icon.png" />

    <menuitem id="property" name="Property" parent="tenants_owner_root" action="property_action" sequence="1" />
    <menuitem id="tenants" name="Tenants" parent="tenants_owner_root"  sequence="3"/>
    <menuitem id="inquiry" name="Inquiry" parent="tenants" action="inquiry_action" sequence="2"/>
    <menuitem id="detail" name="Details" parent="tenants" action="tenant_action" sequence="3"/>
    <menuitem id="config" name="configration" parent="tenants_owner_root"  sequence="5"/>
    <menuitem id="features" name="features" parent="config" action="features_action"/>
    <menuitem id="food" name="food" parent="config" action="food_action" />
    <menuitem id="rooms" name="Rooms" parent="config" action="room_action"/>
    <menuitem id="roomsallot" name="Rooms Allotment" parent="config" action="allot_action"/>
    <menuitem id="bill" name="Bill" parent="tenants_owner_root" action="bill_action" sequence="4" />
   
</odoo>