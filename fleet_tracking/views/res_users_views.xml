<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="fleet_customer_list_view" model="ir.ui.view">
        <field name="name">fleet.Customer.tree</field>
        <field name="model">res.users</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record id="res_users_view_form" model="ir.ui.view">
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <page name="access_rights" position="inside">
                <group attrs="{'invisible': [('sel_groups_1_8_9', '!=', 8)]}" name="closed_date">
                    <field name="users_type" widget="radio"/>
                    <field name="driving_licence_nunmber" />
                    <field name="birth_date"/>
                </group>
            </page>
        </field>
    </record>

    <record id="res_users_simple_view_form" model="ir.ui.view">
        <field name="name">res.users.simple.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_simple_form"/>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="users_type" widget="radio" t-value="customer"/>
            </field>
        </field>
    </record>


    <record id="fleet_customer_action_window" model="ir.actions.act_window">
        <field name="name">Customer</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree,form</field>
        <field eval="[('groups_id','=',ref('fleet_tracking.group_customer'))]" name="domain"/>
    </record>

    <record id="fleet_driver_action_window" model="ir.actions.act_window">
        <field name="name">Driver</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">tree</field>
        <field eval="[('groups_id','=',ref('fleet_tracking.group_driver'))]" name="domain"/>
    </record>
    
    <menuitem action="fleet_customer_action_window" id="fleet_customer_menu" name="Customer" parent="fleet_tracking.fleet_vehicle_contract_booking_menu"/>
    <menuitem action="fleet_driver_action_window" id="fleet_driver_menu" name="Driver" parent="fleet_tracking.fleet_vehicle_contract_booking_menu"/>
</odoo>