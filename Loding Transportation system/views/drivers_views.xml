<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_driver_kanban" model="ir.ui.view">
      <field name="name">Driverkanban</field>
      <field name="model">drivers.drivers</field>
      <field name="arch" type="xml">
        <kanban class="o_res_partner_kanban">
            <templates>
                <t t-name="kanban-box">
                   <div t-attf-class="oe_kanban_global_click">
                        <div class="form-group">
                         <field name="photo"
       							widget="image"
       							class="oe_kanban_avatar pull-right" 
       							options="{'size': [110,110]}"/>
     					</div>
       					<div class="form-group">
       						<strong>Name</strong>
				            <field name="name" class="form-control"/>
				        </div>
				        <div class="form-group">
				            <strong> ContactNumber</strong>
				            <field name="contactnumber"/>
				        </div>
				        <div class="form-group">
					        <strong>Email</strong>
					        <field name="email" class="form-control"/>
					    </div>
					    <div class="form-group">
				            <strong>Address--</strong>
				            <field name="address" class="form-control"/>
				        </div>
				        <div class="form-group">
				            <strong>Date_Of_Birth</strong>
				            <field name="date_of_birth" class="form-control"/>
				        </div>
				        <div class="form-group">
				            <strong>Licence_Availability</strong>
				            <field name="licence" class="form-control"/>
				        </div>
				        <div class="form-group">
				            <strong>Licence_Number</strong>
				            <field name="licence_number" class="form-control"/>
				        </div>
				        <div class="form-group">
				            <strong>Valid-till</strong>
				            <field name="valid_date" class="form-control"/>
				        </div>
				        <div class="form-group">
				           <strong>City</strong>
				            <field name="city" class="form-control"/>
				        </div>
				        <div class="form-group">
				            <strong>Pincode</strong>
				            <field name="pincode" class="form-control"/>
				        </div>
				        <div class="form-group">
							<strong>State</strong>
							<field name="state_id" class="form-control"/>
						</div>
			      
                    </div>
                </t>
            </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.ui.view" id="view_driver_form">
		<field name="name">Drivers</field>
		<field name="model">drivers.drivers</field>
		<field name="arch" type="xml">
		<form>
			<sheet>
			  <group>
				<field name="company_id"/>
				<field name="name"/>
				<field name="contactnumber" widget="phone"/>
				<field name="email" widget="email"/>
				<field name="address"/>
				<field name="date_of_birth"/>
				<field name="city"/>
				<field name="pincode"/>
				<field name="state_id"/>
				<field name="photo" widget="image"/>
			  </group>
				<group>
					<notebook>
					<page string="Licence-Details">
						<group>
							<field name= "licence"/>
							<field name="licence_number" attrs="{'invisible' : [('licence','!=', 'yes')]}"/>
							<field name="valid_date" attrs="{'invisible' : [('licence','!=', 'yes')]}"/>
						</group>
					</page>
					</notebook>
				</group>
			</sheet>    
		</form>
		</field>
	</record>

	<record model="ir.ui.view" id="view_driver_tree">
		<field name="name">Drivers</field>
		<field name="model">drivers.drivers</field>
		<field name="arch" type="xml">
			<tree>
				<field name="company_id"/>	
				<field name="name"/>
				<field name="contactnumber"/>
				<field name="email"/>
				<field name="address"/>
				<field name="date_of_birth"/>
				<field name="city"/>
				<field name="pincode"/>
				<field name="state_id"/>
				<field name= "licence"/>
				<field name="licence_number" attrs="{'invisible' : [('licence','!=', 'yes')]}"/>
				<field name="valid_date" attrs="{'invisible' : [('licence','!=', 'yes')]}"/>
				<field name="photo" widget="image"/>							
			</tree>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_driver">
		<field name="name">Drivers</field>
		<field name="res_model">drivers.drivers</field>
		<field name="view_mode">kanban,tree,form</field>
	</record>

	<menuitem name="Drivers" id="driver_id" parent="lts_configration" action="action_driver" />

</odoo> 