<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="customer_index1">
        <t t-call="portal.frontend_layout">
            <div align="center" class="page-header">
                <h1>Animal Health Monitoring
            </h1>
            </div>
            <header align="center" color="green;"/>
            <ul class="nav nav-pills" style="justify-content:center; margin:30px;}">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#user">Patient</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#hospital">Hospital</a>
                </li>
            </ul>
            <div align="center" class="tab-content">
                <div class="tab-pane active" id="user">
                    <form action="/registration/user" method="post">
                        <table>
                            <tr>
                                <td>User Name</td>
                                <td>
                                    <input class="form-control" name="username" type="text"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <input class="form-control" name="email" type="text"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Password</td>
                                <td>
                                    <input class="form-control" name="password" type="password"/>
                                </td>
                            </tr>
                            <tr>
                                <td/>
                                <td>
                                    <button class="btn btn-secondary" style="margin:20px;" type="submit">Submit</button>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
                <div class="tab-pane" id="hospital">
                    <form action="/registration/hospital" method="post">
                        <table>
                            <tr>
                                <td>Hospital Name</td>
                                <td>
                                    <input class="form-control" name="username" type="text"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <input class="form-control" name="email" type="email"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Password</td>
                                <td>
                                    <input class="form-control" name="password" type="password"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Currency</td>
                                <td>
                                    <select class="btn btn-secondary dropdown-toggle" name="currency">
                                        <t t-as="cur" t-foreach="currency">
                                            <option t-attf-value="{{cur.name}}">
                                                <t t-esc="cur.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td/>
                                <td>
                                    <button class="btn btn-secondary" style="margin:20px;" type="submit">Submit</button>
                                </td>
                            </tr>
                        </table>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>